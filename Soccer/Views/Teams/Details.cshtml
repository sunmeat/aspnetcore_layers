@model Soccer.BLL.DTO.TeamDTO

@{
    ViewBag.Title = "Подробиці по клубу";
}

<h2>Подробиці по клубу</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Назва клуба:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Тренер:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coach)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутися до списку клубів</a>
</div>